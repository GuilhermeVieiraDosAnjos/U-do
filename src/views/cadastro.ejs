<%- include('includes/header') %>


  <section class="container-section">
    <div class="container">
      <div class="container-form">
        <div class="form-title">
          <h1><a href="/" class="app-title main-link">U do</a></h1>
          <p>Cadastre-se</p>
        </div>

         <!-- Aqui iria um aflas message mas creio que ela só ira aparecer em caso --> 
        <div class="flash-messages">
          <%- include('includes/messages')  %>
        </div>
         
        <div class="form-login">
          <form action="cadastro/register" method="post">

            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            
            <label class="label-form" for="nome">Nome Completo</label>
            <input class="input-form" type="text" placeholder="Nome completo" name="nome" required>

            <label class="label-form" for="email">Email</label>
            <input class="input-form" type="text" placeholder="exemplo@gmail.com" name="email" required>

            <label class="label-form" for="Senha">Senha</label>
            <input class="input-form" type="password" placeholder="Digite sua senha" name="password" required>

            <label class="label-form" for="Senha">Repita sua senha</label>
            <input class="input-form" type="password" placeholder="Repita sua senha" required>
            
            <button class="main-btn" type="submit" class="title-chato">Cadastre-se</button>

          </form>

          <p class="back-login">Já tem uma conta ? <a href="/">Faça o login</a></p>

        </div>
      </div>
    </div>
  </section>

  <%- include('includes/footer') %>