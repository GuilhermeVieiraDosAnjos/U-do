<% if(errors.length > 0) { %>
<div class="row">
    <div class="col my-3">
        <div class="alert alert-danger message" >
            <% errors.forEach(error =>{ %>
                <%= error %> <br>
            <% }); %>
        </div>
    </div>
</div>
<% } %>


<% if (success.length > 0) { %>
    <div class="row" >
        <div class="col my-3">
            <div class="alert alert-success message">
                <% success.forEach(success => { %>
                    <%= success %> <br>
                <% }); %>
            </div>
        </div>
    </div>
    <% } %>